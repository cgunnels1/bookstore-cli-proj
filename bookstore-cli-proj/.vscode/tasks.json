{
     "version": "2.0.0",
     "tasks": [
          {
               "label": "build",
               "command": "dotnet",
               "type": "process",
               "args": [
                    "build",
                    "${workspaceFolder}/bookstore-cli-proj.csproj",
                    "/property:GenerateFullPaths=true",
                    "/consoleloggerparameters:NoSummary"
               ],
               "problemMatcher": "$msCompile"
          },
          {
               "label": "publish",
               "command": "dotnet",
               "type": "process",
               "args": [
                    "publish",
                    "${workspaceFolder}/bookstore-cli-proj.csproj",
                    "/property:GenerateFullPaths=true",
                    "/consoleloggerparameters:NoSummary"
               ],
               "problemMatcher": "$msCompile"
          },
          {
               "label": "watch",
               "command": "dotnet",
               "type": "process",
               "args": [
                    "watch",
                    "run",
                    "--project",
                    "${workspaceFolder}/bookstore-cli-proj.csproj"
               ],
               "problemMatcher": "$msCompile"
          }
     ]
}